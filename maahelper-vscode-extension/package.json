{
  "name": "maahelper-vscode",
  "displayName": "MaaHelper - AI Coding Assistant",
  "description": "Deep IDE integration for MaaHelper AI coding assistant with real-time analysis and intelligent suggestions",
  "version": "0.1.0",
  "publisher": "maahelper",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "assistant",
    "code-analysis",
    "autocomplete",
    "refactoring",
    "bug-fixing"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:java",
    "onLanguage:cpp",
    "onLanguage:c",
    "onCommand:maahelper.activate"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "maahelper.activate",
        "title": "Activate MaaHelper",
        "category": "MaaHelper"
      },
      {
        "command": "maahelper.analyzeFile",
        "title": "Analyze Current File",
        "category": "MaaHelper"
      },
      {
        "command": "maahelper.codeReview",
        "title": "AI Code Review",
        "category": "MaaHelper"
      },
      {
        "command": "maahelper.bugAnalysis",
        "title": "Bug Analysis",
        "category": "MaaHelper"
      },
      {
        "command": "maahelper.refactorCode",
        "title": "Refactor Code",
        "category": "MaaHelper"
      },
      {
        "command": "maahelper.explainCode",
        "title": "Explain Code",
        "category": "MaaHelper"
      },
      {
        "command": "maahelper.generateTests",
        "title": "Generate Tests",
        "category": "MaaHelper"
      },
      {
        "command": "maahelper.optimizePerformance",
        "title": "Optimize Performance",
        "category": "MaaHelper"
      },
      {
        "command": "maahelper.startWorkflow",
        "title": "Start Project Workflow",
        "category": "MaaHelper"
      },
      {
        "command": "maahelper.showWorkflows",
        "title": "Show Active Workflows",
        "category": "MaaHelper"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "maahelper.explainCode",
          "group": "maahelper@1"
        },
        {
          "when": "editorHasSelection",
          "command": "maahelper.refactorCode",
          "group": "maahelper@2"
        },
        {
          "when": "editorHasSelection",
          "command": "maahelper.codeReview",
          "group": "maahelper@3"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .py || resourceExtname == .js || resourceExtname == .ts",
          "command": "maahelper.analyzeFile",
          "group": "maahelper@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "maahelper.analyzeFile",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      },
      {
        "command": "maahelper.codeReview",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      },
      {
        "command": "maahelper.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e"
      }
    ],
    "configuration": {
      "title": "MaaHelper",
      "properties": {
        "maahelper.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable MaaHelper AI assistant"
        },
        "maahelper.cliPath": {
          "type": "string",
          "default": "maahelper",
          "description": "Path to MaaHelper CLI executable"
        },
        "maahelper.autoAnalysis": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic code analysis on file save"
        },
        "maahelper.inlineHints": {
          "type": "boolean",
          "default": true,
          "description": "Show inline code hints and suggestions"
        },
        "maahelper.workflowNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for workflow progress"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
